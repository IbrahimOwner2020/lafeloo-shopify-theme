<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="shortcut icon" href="{{ 'favicon.ico' | asset_url }}">

    {{ content_for_header }}

    {{- 'theme.css' | asset_url | stylesheet_tag -}}
  </head>

  {% style 'scss' %}
    @font-face {
      font-family: 'avenirRegular';
      src: url('{{ 'metropolis-regular-webfont.eot?' | asset_url }}');
      src: url('{{ 'metropolis-regular-webfont.eot??#iefix' | asset_url }}') format('embedded-opentype'),
      url('{{ 'metropolis-regular-webfont.woff' | asset_url }}') format('woff'),
      url('{{ 'metropolis-regular-webfont.ttf' | asset_url }}') format('truetype'),
      url('{{ 'metropolis-regular-webfont.svg#metropolis-regular-webfont' | asset_url }}') format('svg');
      font-style: normal;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: antialiased;
    }
  {% endstyle %}

  <body>
    <main>
      {% section 'header' %}
      {{ content_for_layout }}
      {% section 'footer' %}
    </main>

    <script src="{{ 'theme.js' | asset_url }}"></script>
  </body>
</html>